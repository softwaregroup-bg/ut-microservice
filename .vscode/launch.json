{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Storybook",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "storybook"
            ],
            "console": "integratedTerminal",
            "args": [
                "test"
            ],
            "autoAttachChildProcesses": false,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Back end",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.js",
            "args": [],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy",
                "--max_old_space_size=500000"
            ],
            "env": {
                "NODE_PATH": "dev"
            },
            "outputCapture": "std"
        },
        {
            "name": "Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.test.js",
            "args": [
                "--run.logLevel=trace",
                "--utPort.logLevel=trace"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy",
                "--max_old_space_size=500000"
            ],
            "env": {
                "UT_ENV": "test",
                "NODE_PATH": "dev"
            },
            "outputCapture": "std"
        },
        {
            "name": "Test UI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/ui.test.js",
            "args": [
                "--run.logLevel=trace"
                // ,"--playwright.headed"
                // ,"--playwright.update-snapshots"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy",
                "--max_old_space_size=500000"
            ],
            "env": {
                "UT_ENV": "test",
                "NODE_PATH": "dev"
                // "PWDEBUG": 1
            },
            "outputCapture": "std"
        },
        {
            "name": "Test single",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.test.js",
            "args": [
                "--run.logLevel=trace",
                "--run.test.prompt"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy",
                "--max_old_space_size=500000"
            ],
            "env": {
                "UT_ENV": "test",
                "NODE_PATH": "dev"
            },
            "outputCapture": "std"
        }
    ]
}
